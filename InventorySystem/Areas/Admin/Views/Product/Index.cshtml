@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"><i class="bi bi-plus-square-fill"></i> Create New Product</a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblData" class="table table-responsive table-hover display compact cell-border">
        <thead class="table-dark">
            <tr>
                <th>Serial Number</th>
                <th>Description</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Cost</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}