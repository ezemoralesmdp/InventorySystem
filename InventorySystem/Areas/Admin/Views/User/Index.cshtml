@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">User List</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-plus-square-fill"></i> Create New User
        </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblData" class="table table-responsive table-hover display compact cell-border">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Names</th>
                <th>Lastname</th>
                <th>Phone Number</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}