@model InventorySystem.Models.ViewModels.OrderDetailVM
@using InventorySystem.Utils

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input hidden asp-for="Order.Id" />
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row ">
                <div class="col-12 d-none d-md-block col-md-6 pb-1">
                    <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
                </div>
                <div class="col-12 col-md-4 offset-md-2 text-right">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-outline-info form-control btn-sm">Return</a>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-secondary">Shipment details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Names</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.ClientNames" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.ClientNames" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Telephone</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.Telephone" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Telephone" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Address</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.Address" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Address" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">City</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.City" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.City" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Country</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.Country" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Country" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.User.Email" class="form-control" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.User.Email" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order date</div>
                                <div class="col-9">
                                    <input value="@Model.Order.OrderDate.ToShortDateString()" readonly type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Carrier</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.Carrier" class="form-control" id="carrierId" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.Carrier" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Delivery Number</div>
                                <div class="col-9">
                                    @if (User.IsInRole(SD.Role_Admin))
                                    {
                                        <input asp-for="Order.DeliveryNumber" class="form-control" id="deliveryNumberId" />
                                    }
                                    else
                                    {
                                        <input asp-for="Order.DeliveryNumber" readonly type="text" class="form-control" />
                                    }
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Shipping date</div>
                                <div class="col-9">
                                    @if (Model.Order.DeliveryDate.Year < 1900)
                                    {
                                        <input id="deliveryDate" type="text" readonly class="form-control" />
                                    }
                                    else
                                    {
                                        <input value="@Model.Order.DeliveryDate.ToShortDateString()" id="deliveryDate" type="text" readonly class="form-control" />
                                    }
                                </div>
                            </div>
                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Transaction ID</div>
                                    <div class="col-9">
                                        <input asp-for="Order.TransactionId" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">

                                    <div class="col-3">Fecha de Pago</div>
                                    <div class="col-9">
                                        <input value="@Model.Order.PaymentDate.ToShortDateString()" readonly id="paymentDate" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Estado Pago</div>
                                    <div class="col-9">
                                        <input asp-for="Order.PaymentState" type="text" readonly class="form-control" />
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-secondary">Order Detail</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @foreach (var item in Model.OrderDetailList)
                                {
                                    <li class="list-group-item d-flex justify-content-between p-2">
                                        <div class="row container">
                                            <div class="col-8">
                                                <input type="hidden" asp-for="@item.Id" />
                                                <h6 class="my-0 text-secondary">@item.Product.Description</h6>
                                                <small class="text-muted">Precio : @item.Price</small><br />
                                                <small class="text-muted">Cantidad : @item.Amount</small>
                                            </div>
                                            <div class="col-4 text-end">
                                                <p class="text-success">@(String.Format("{0:C}", item.Price * item.Amount))</p>
                                            </div>
                                        </div>
                                    </li>
                                }
                                <li class="list-group-item bg-info">
                                    <div class="row container">
                                        <div class="col-8">
                                            <h6 class="text-white">TOTAL </h6>
                                        </div>
                                        <div class="col-4 text-end">
                                            <h6 class="text-white">@(String.Format("{0:C}", Model.Order.TotalOrder))</h6>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                @if(Model.Order.OrderState == SD.ApprovedStatus)
                                {
                                    <a asp-action="Process" asp-route-id="@Model.Order.Id" class="btn btn-primary form-control">Start processing</a>
                                }

                                @if(Model.Order.OrderState == SD.ProcessingStatus)
                                {
                                    <input type="submit" value="Send Order" onclick="return validateEntry()" class="btn btn-success form-control" formaction="/Admin/Order/SendOrder" formmethod="POST" />
                                }
                            }
                            else
                            {
                                <label class="btn btn-primary form-control">@Model.Order.OrderState</label>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>

        const validateEntry = () => {
            let carrierId = document.getElementById("carrierId").value;
            let deliveryNumberId = document.getElementById("deliveryNumberId").value;

            if (carrierId == '') {
                swal("Error", "Enter the carrier", "error");
                return false;
            }
            if (deliveryNumberId == '') {
                swal("Error", "Enter the delivery number", "error");
                return false;
            }
            return true;
        }

    </script>
}